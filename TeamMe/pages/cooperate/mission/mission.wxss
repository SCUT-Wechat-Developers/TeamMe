/* pages/square/mission/mission.wxss */
/**index.wxss**/
.head{
  padding: 0 30rpx 10rpx;
  margin-top: 60rpx;
}
.head .t-img{
  margin-top: -100rpx;
}
.head .xxl{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #FFF;
  margin-bottom: 20rpx;
}
.head .name{
  font-weight: bold;
  font-size: 36rpx;
  color: #333;
}
.head .word,
.head .info{
  padding-top: 20rpx;
}
.head .word text{
  font-size: 32rpx;
  margin:0 auto;
  text-align:center;
  background:-webkit-linear-gradient(left,#ff0000,#ffff00 25%,#ff0000 50%,#ffff00 75%,#ff0000);
  color:transparent;
  -webkit-background-clip:text;
  background-size:200% 100%;
  animation:masked-animation 1s infinite linear;
}
.con{
  height: 60rpx;
  line-height: 60rpx;
}
.con .icon{
  margin-right: 20rpx;
}
.head .info{
  padding-bottom: 20rpx;
}
/* pages/team_regis2/register.wxss */

.teamNameContainer {
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 10px;
  padding: 10rpx 0;
  position: inherit;
}

.teamNameContainer .title {
  padding-left: 10rpx;
}

.teamInfoContainer {
  border-radius: 100px;
}

.nextStep {
  position: absolute;
  left: 30%;
  top: 100rpx;
  right: 30%;
  bottom: 0;
  margin: auto;
}
