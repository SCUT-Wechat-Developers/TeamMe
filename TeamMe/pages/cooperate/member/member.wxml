<view class="padding-xl radius shadow-warp bg-white">当前队伍：{{teamName}}</view>

<view class="padding" wx:for="{{personinfo.mission}}">
  <view class="padding-xl radius shadow-warp bg-white">任务{{index+1}}</view>
  <view class="padding-xl radius shadow-warp bg-white">
    <text class="cuIcon-medalfill lg text-blue"></text>
    <text class="name-ti">{{item.content}}</text>
    <view class="con">
      <text class="cuIcon-location lg text-gray icon"></text>
      <text class="name-ti">{{item.deadline}}</text>
    </view>
    <view class="con">
      <text class="cuIcon-location lg text-gray icon"></text>
      <text class="name-ti" wx:if="{{!item.finished}}">尚未完成</text>
       <text class="name-ti" wx:else>已经完成</text>
    </view>
    <button class="" bindtap="complete" data-item="{{item}}" data-index="{{index}}">完成</button>
    <!-- <button class="" bindtap="change" data-item="{{item}}" >加入</button> -->
  </view>
  
</view>


