<view class="itemView">姓名：
    <input class="input" name="userName" placeholder="请填入姓名" 
    bindinput="userNameInput"/>
  </view>
  <!-- password -->
  <view class="itemView">性    别：
    <radio-group bindchange="bandleChange">
      <radio color="green" value="{{1}}"> ——男</radio>

      <radio color="green" value="{{0}}"> ——女</radio>
      </radio-group>
      <!-- <view>--您选中的是:{{ gender }}</view> -->
  </view>
