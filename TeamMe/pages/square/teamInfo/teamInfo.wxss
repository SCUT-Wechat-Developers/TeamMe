/**index.wxss**/
/*基础样式*/
page {
    padding-bottom: 100rpx;
}
.head{
    padding: 0 30rpx 10rpx;
    margin-top: 60rpx;
}
.head .t-img{
    margin-top: -100rpx;
}
.head .xxl{
    width: 200rpx;
    height: 200rpx;
    border: 1px solid #FFF;
    margin-bottom: 20rpx;
}
.head .name{
    font-weight: bold;
    font-size: 36rpx;
    color: #333;
}
.head .word,
.head .info{
    padding-top: 10rpx;
    margin-top: 5rpx;
}


/*缺省*/
.ellipse {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    display: inline-block;
}


.head .word text{
    font-size: 32rpx;
    margin:0 auto;
    text-align:center;
    background:-webkit-linear-gradient(left, #118405, #979709 25%, #25b305 50%, #555505 75%,#118405);
    color:transparent;
    -webkit-background-clip:text;
    background-size:200% 100%;
    animation:masked-animation 1s infinite linear;
}
.con{
    height: 60rpx;
    line-height: 60rpx;
}
.con .icon{
    margin-right: 20rpx;
}
.head .info{
    padding-bottom: 20rpx;
}


/*队员卡片*/



.member .memberAvatar image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}
